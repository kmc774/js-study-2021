<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.windfall.cereal.mappers.memberMapper">
	<insert id="insertMember" parameterType="memberVO">
		INSERT INTO member(id, pw, name) 
		VALUES(#{id}, #{pw}, #{name});
	</insert>

	<select id="loginMember" resultType="memberVO" parameterType="memberVO">
		SELECT id, name 
		FROM member
		WHERE id = #{id} AND pw = #{pw}
	</select>
	
	<select id="selectMember" resultType="memberVO" parameterType="memberVO">
		SELECT *
		FROM member
		WHERE id = #{id}
	</select>

</mapper>